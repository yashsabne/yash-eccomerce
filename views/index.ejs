    <script>
   
      function closeModal() {
        document.getElementById("myModal").style.display = 'none';
      }
  
     
   
      function addToCartBtn(productId) {
    console.log("Product added");

    

    // Load the local products.json file
    fetch('/products')
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(productsData => {
            // Retrieve existing cart from localStorage or initialize an empty array
            console.log('Loaded productsData:', productsData);
            
            let cart = JSON.parse(localStorage.getItem('cart')) || [];

            // Check if the product ID exists in the loaded data
            if (productId in productsData) {
                // Add the selected product to the cart
                const item = { id: productId, name: productsData[productId].title, price: productsData[productId].price };
                cart.push(item);

                console.log(cart);

                // Save the updated cart back to localStorage
                localStorage.setItem('cart', JSON.stringify(cart));

                // Optionally, you can provide user feedback (e.g., show a notification)
                alert(`${productsData[0].title} added to cart!`);

                // Update the cart quantity on the navbar
                updateCartQuantity();
            } else {
                console.error(`Product with ID ${productId} not found.`);
            }
        })
        .catch(error => console.error('Error fetching product details:', error));
}
 

const addBtns = document.querySelectorAll('.modelAddToCart');

addBtns.forEach(addBtn => {
    addBtn.addEventListener("click", () => {
        const productId = addBtn.getAttribute('data-product-id');
        addToCartBtn(productId);
    });
});
    </script>
  
  
