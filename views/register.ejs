<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Register</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
  <h3 style="text-align: center;margin-top: 10px;color: rgb(48, 48, 230);">Welcome to Yash Store
    <small> made by</small>
    <big>
      <span style="color: #FBBC05;">y</span>
      <span style="color: #34A853;">a</span>
      <span style="color: #4285F4;">s</span>
      <span style="color: #EA4335;">h</span>
    </big>
  </h3>
  <div class="main-cont-register">

    <div class="log-flex">
      <div class="login-register">
        <!-- Makes POST request to /login route -->
        <form action="/register" method="POST">
          <div class="login-register-form">
            <div class="logo-login">
              <img width="300px" height="110px" style="border-radius: 7px;" src="/imges/logo.png" alt="">
            </div>

            <div class="form-group">
              <input type="email" id="imput-u" class="form-control" name="username" placeholder=" email address"
                required>
            </div>

            <div class="form-group">
              <input type="text" id="imput-name" class="form-control" autocomplete="off" name="fullName"
                placeholder="Full Name" required>
            </div>

            <div class="form-group">
              <input type="password" id="imput-p" class="form-control" autocomplete="off" name="password"
                placeholder="password" required>
            </div>

            <span class="passcheck"><input type="checkbox" onclick="viewPass()" id="passcheck"><label
                for="passcheck">show password</label></span>

            <div class="form-group">
              <input type="password" id="imput-cnf" class="form-control" autocomplete="off" name="cnfpass"
                placeholder=" confirm password" required>
            </div>

            <div class="form-group">
              <input type="number" class="form-control" id="imput-c" placeholder=" phone number" name="phone" required>
            </div>

            <div class="form-group">
              <input type="date" id="imput-dob" class="form-control" name="dob" autocomplete="off" placeholder="DOB"
                required>
            </div>


            <button type="submit" class="btn btn-dark ba">Register</button>
          </div>
        </form>

        <div style="display: flex;align-items: center;" class="div-or-line">
          <div class="div1"></div>
          <div class="div2">or</div>
          <div class="div1"></div>
        </div>

        <div class="other-login">
          <span> <a href="/auth/google"> <i class="fa-brands fa-google"></i> login with google</span></a>
        </div>
        <small style="text-align: center;">for now password reset feature <br> is not available so remember
          pasword</small>

      </div>
      <div class="login-register new-register">
        Already have an account?<a href="/login">Login here</a> <br>
      </div>

    </div>
  </div>
  <script>
    function viewPass() {
      const passview = document.getElementById("imput-p");

      if (passview.type === 'password') {
        passview.type = 'text'
      }
      else {
        passview.type = 'password'
      }
      const cnf = document.getElementById("imput-cnf");

      if (cnf.type === 'password') {
        cnf.type = 'text'
      }
      else {
        cnf.type = 'password'
      }
    }
  </script>
</body>
</html>